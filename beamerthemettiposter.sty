\mode<all>

% colors

\definecolor{airforceblue}{rgb}{0.36,0.54,0.66}
\definecolor{ttiblue}{rgb}{0.059,0.035,0.16}


% font size

\setbeamerfont*{block title}{size=\large}
\setbeamerfont*{block body}{size=\normalsize}
\setbeamerfont*{caption}{size=\normalsize}
\setbeamerfont*{itemize/enumerate body}{parent=,size=\normalsize}
\setbeamerfont*{itemize/enumerate subbody}{parent=itemize/enumerate body}
\setbeamerfont*{itemize/enumerate subsubbody}{parent=itemize/enumerate subbody}


% block

\setbeamercolor{block title}{fg=white,bg=airforceblue}


% itemize

\setbeamercolor{itemize item}{fg=ttiblue}
\setbeamercolor{itemize subitem}{fg=ttiblue}
\setbeamercolor{itemize subsubitem}{fg=ttiblue}
\setbeamercolor{enumerate item}{fg=black}


% caption

\setbeamertemplate{caption}{\insertcaption}


% title format

\setbeamercolor{inverted}{fg=white,bg=ttiblue}
\setbeamercolor{plain}{fg=black,bg=white}

\setbeamertemplate{headline}{
  \begin{beamercolorbox}[sep=4ex,wd=\paperwidth]{inverted}
    \centering
    \textbf{\huge \inserttitle}
  \end{beamercolorbox}
  \begin{beamercolorbox}[sep=4ex,wd=\paperwidth]{plain}
    \centering
    \large \insertauthor \hspace{2em} \insertinstitute
  \end{beamercolorbox}
  \vspace{-12ex} % HACKING
}

\setbeamertemplate{footline}{
  \begin{beamercolorbox}[sep=2ex,wd=\paperwidth]{inverted}
    \hfill\insertdate\hspace{1em}
  \end{beamercolorbox}
}

\mode<all>
